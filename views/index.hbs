<a href='/records/new'>新增支出</a>

<ul>
	{{#each record}}
		<li>
			{{this.name}}
			{{this.date}}
			{{this.amount}}
			<a href='/records/{{this._id}}/edit'>編輯</a>
			<form
				action='/records/{{this._id}}?_method=DELETE'
				method='post'
				style='display: inline;'
			>
				<button type='submit'>刪除</button>
			</form>
		</li>
	{{/each}}
</ul>