<div class='card mx-auto mt-3' style="width: 30rem;">
	{{>message}}
<div class="card-body">

	<form action='/users/login' method='POST' class='mb-3'>
		<div>
			<label for='email' class='form-label'>Email</label>
			<input
				type='email'
				id='email'
				name='email'
				value='{{email}}'
				class='form-control'
			/>
		</div>
		<div>
			<label for='password' class='form-label'>Password</label>
			<input
				type='password'
				id='password'
				name='password'
				class='form-control'
			/>
		</div>
		<div>
			<p class='text-end mt-3 alert alert-light'>還沒有帳號嗎？<a
					href='/users/register'
					class='alert-link'
				>這裡註冊</a></p>
		</div>
		<div class='d-grid gap-2 col-6 mx-auto'>
			<button type='submit' class='btn btn-primary'>登入</button>
			<a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
			<a href="/auth/google" class="btn btn-info btn-block">Google Login</a>
		</div>
	</form>
</div>
</div>